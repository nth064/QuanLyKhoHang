@model QuanLyKhoHang.Models.StockInDetail

@{
    ViewData["Title"] = "Xóa chi tiết nhập kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-container">
    <div class="delete-title">Bạn có chắc chắn muốn xóa chi tiết này?</div>
    <div class="delete-info">
        <dl class="row">
            <dt class="col-sm-4">Phiếu nhập</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.StockIn.Id)</dd>

            <dt class="col-sm-4">Sản phẩm</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Id)</dd>

            <dt class="col-sm-4">Số lượng</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-4">Đơn giá</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="back-link">Quay lại danh sách</a>
    </form>
</div>
