@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.Roles as IList<string>;
}

<div class="card shadow p-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <dl class="row">
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Tên đăng nhập</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3">Vai trò</dt>
        <dd class="col-sm-9">
            @if (roles != null && roles.Any())
            {
                <ul class="mb-0 ps-3">
                    @foreach (var role in roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            }
            else
            {
                <span class="text-muted fst-italic">Chưa có vai trò</span>
            }
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
