@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allRoles = ViewBag.AllRoles as List<string>;
    var userRoles = ViewBag.UserRoles as List<string>;
}

<div class="card shadow p-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
            <input asp-for="UserName" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Vai trò</label>
            @foreach (var role in allRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role"
                    @(userRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Lưu thay đổi
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div>
