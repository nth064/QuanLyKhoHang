@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Sửa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var allRoles = ViewBag.AllRoles as List<string>;
    var userRoles = ViewBag.UserRoles as IList<string>;
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" class="form-control" value="@Model.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Vai trò</label>
        <div>
            @for (int i = 0; i < allRoles.Count; i++)
            {
                var role = allRoles[i];
                var roleId = "role_" + i;

                <div class="form-check form-check-inline">
                    <input class="form-check-input"
                           type="checkbox"
                           name="selectedRoles"
                           id="@roleId"
                           value="@role"
                    @(userRoles != null && userRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label ms-1" for="@roleId">@role</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
