@model QuanLyKhoHang.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-container">
    <h2 class="form-title">THÊM DANH MỤC</h2>
    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Tên danh mục</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Thêm danh mục
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-list"></i> Quay lại danh sách
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
