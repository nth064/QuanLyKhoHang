@model QuanLyKhoHang.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white">Chi tiết khách hàng</div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Tên khách hàng</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Địa chỉ</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4">Số điện thoại</dt>
            <dd class="col-sm-8">@Model.Phone</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
