@model IEnumerable<QuanLyKhoHang.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-container">
    <div class="product-header">
        <span class="product-title">Quản lý sản phẩm</span>
        <a asp-action="Create" class="btn-create"><i class="fa fa-plus"></i> Thêm sản phẩm</a>
    </div>

    <!-- Form tìm kiếm nâng cao -->
    <form asp-action="Index" method="get" class="mb-3 d-flex flex-wrap align-items-center gap-2" style="max-width:600px;">
        <input type="text" name="searchString" class="form-control" style="max-width:220px;" placeholder="Tìm kiếm..." value="@ViewBag.SearchString" />
        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Tìm kiếm</button>
    </form>

    <div class="table-responsive">
        <table class="custom-table product-table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Ngày tạo</th>
                    <th>Danh mục</th>
                    <th style="width:120px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" style="text-align:center;color:#888;">Chưa có sản phẩm nào.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                <span class="ellipsis" title="@item.Description">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </span>
                            </td>
                            <td>@String.Format("{0:N0} ₫", item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>@(item.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                            <td class="action-icons">
                                <a asp-action="Edit" asp-route-id="@item.Id" title="Sửa"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" title="Xóa"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
