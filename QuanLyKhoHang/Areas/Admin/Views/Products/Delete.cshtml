@model QuanLyKhoHang.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="delete-container">
    <div class="delete-title">Bạn có chắc chắn muốn xóa sản phẩm này?</div>
    <div class="delete-info">
        <dl class="row">
            <dt class="col-sm-4">Tên sản phẩm</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-4">Mô tả</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
            <dt class="col-sm-4">Giá</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
            <dt class="col-sm-4">Số lượng</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>
            <dt class="col-sm-4">Ngày tạo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
            <dt class="col-sm-4">Ngày cập nhật</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>
            <dt class="col-sm-4">Danh mục</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="delete-btn" />
        <a asp-action="Index" class="back-link">Quay lại danh sách</a>
    </form>
</div>
