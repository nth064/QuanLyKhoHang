@model IEnumerable<QuanLyKhoHang.Models.StockOut>
@{
    ViewData["Title"] = "Danh sách xuất kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới phiếu xuất</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã phiếu xuất</th>
            <th>Khách hàng</th>
            <th>Ngày xuất</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá xuất</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Customer?.Name</td>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                <td>
                    @foreach (var detail in item.StockOutDetails)
                    {
                        <div>@detail.Product?.Name</div>
                    }
                </td>
                <td>
                    @foreach (var detail in item.StockOutDetails)
                    {
                        <div>@detail.Quantity</div>
                    }
                </td>
                <td>
                    @foreach (var detail in item.StockOutDetails)
                    {
                        <div>@detail.Price.ToString("N0")</div>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
