@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Serene Shop</title>

    <!-- Bootstrap + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- CSS custom -->
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f5f5;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 500;
            padding: 8px 15px;
        }

            .navbar-nav .nav-link:hover {
                background-color: #0056b3;
                border-radius: 5px;
            }

        .logo {
            height: 40px;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 15px;
            text-align: center;
            margin-top: 50px;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- HEADER / NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/">
                <img src="~/images/logo.png" alt="Logo" class="logo" />
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home">Sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cart">Giỏ hàng</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Order">Đơn hàng</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Quản lý sản phẩm</a>
                    }
                </ul>
                <div class="login-section mt-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">
        @RenderBody()
    </div>

  

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
