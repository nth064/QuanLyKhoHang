@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-sm btn-outline-primary">Đăng xuất</button>
        </form>
    }
    else
    {
        <div class="d-grid gap-2">
            <a id="login" class="btn btn-sm btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
            <a id="register" class="btn btn-sm btn-outline-secondary" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </div>
    }
</div>
