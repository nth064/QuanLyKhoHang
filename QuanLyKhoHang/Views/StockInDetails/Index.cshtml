@model IEnumerable<QuanLyKhoHang.Models.StockInDetail>
@using System.Globalization
@{
    ViewData["Title"] = "Chi tiết nhập kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = new CultureInfo("vi-VN");
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm chi tiết nhập kho</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá nhập</th>
            <th>Tổng tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C0", culture)</td>
                <td>@(Convert.ToDecimal(item.Quantity * item.Price).ToString("C0", culture))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
